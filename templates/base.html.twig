<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortie-ENI{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    {% block header %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <nav>
            <ul>

                <li ><a href="{{ path('home') }}">ACCUEIL</a></li>


                 {% if is_granted ('IS_AUTHENTICATED_REMEMBERED') %}


                     <li ><a href="{{ path('logout') }}">SE DECONNECTER</a></li>
                {% else %}
                    <li ><a href="{{ path('creer_un_admin') }}">CREER UN ADMIN</a></li>
                    {# <li><a href="{{ path('gerer_utilisateur') }}">GERER UTILISATEUR</a></li>
                    <li><a href="{{ path('gerer_les_campus') }}">GERER LES CAMPUS</a></li>
                    <li><a href="{{ path('gerer_les_villes') }}">GERER LES VILLES</a></li>#}



                {% endif %}
            </ul>
        </nav>

    {% endblock %}
    {% block main %}{% endblock %}
    {% block footer %}{% endblock %}

    </body>
</html>
